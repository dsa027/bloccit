<h1>Sign Up Confirmation</h1>
<h3>Are you sure these values are correct?</h3>
<br/>
<br/>
<div>
  <p>Email: <%= @user.email %></p>
  <p>Name: <%= @user.name %></p>
</div>
<br/>
<div class="col-md-4">
  <%= button_to "Yes", {controller: "users", action: "create", params: params}, class: 'btn btn-success btn-lg user-btn', form: {style: 'display:inline-block;'} %>
  <%= button_to "No", new_user_path, class: 'btn btn-default btn-lg user-btn', form: {style: 'display:inline-block;'} %>
</div>
